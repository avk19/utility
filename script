<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<input type="text" id="myInput" value="Copy and paste are disabled">

<script>
  $(document).ready(function() {
    $('#myInput').on('copy paste cut', function(e) {
      e.preventDefault(); // Prevent the default copy, paste, or cut actions
      alert('Copy, paste, and cut actions are disabled.');
    });
  });
</script>